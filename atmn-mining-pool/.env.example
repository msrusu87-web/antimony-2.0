# Mining Pool Configuration

## Pool Server
POOL_HOST=0.0.0.0
POOL_PORT=5555
POOL_DIFFICULTY_PORT=5556
POOL_SSL_PORT=5557
POOL_STATS_PORT=8080

## Stratum Protocol
STRATUM_VERSION=s256
SHARE_TARGET_FACTOR=0.1
SHARE_DIFFICULTY_ADJUST_INTERVAL=30  # seconds

## Mining Difficulty
MIN_DIFFICULTY=0.1
MAX_DIFFICULTY=10000
DIFFICULTY_MULTIPLIER=65536
RETARGET_TIME=300  # seconds

## Block Template
TEMPLATE_UPDATE_INTERVAL=5000  # ms
TEMPLATE_PRIORITY_POOL=true
TEMPLATE_SKIP_EMPTY=false

## Worker Management
MAX_WORKERS_PER_IP=10
IDLE_WORKER_TIMEOUT=600  # seconds
MIN_WORKER_NAME_LENGTH=1
MAX_WORKER_NAME_LENGTH=50

## Payments
PAYMENT_ENABLED=true
PAYMENT_INTERVAL=86400  # 24 hours (seconds)
MINIMUM_PAYOUT=0.1  # ATMN
PAYMENT_ADDRESS=A1xXxXxXxXxXxXxXxXxXxXxXxXxXxXxXx
POOL_COMMISSION=1  # 1%

## Reward Distribution
REWARD_TYPE=proportional  # prop, pplns, pp
SHARE_MULTIPLIER=65536

## Database
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mining_pool
DB_USER=pool
DB_PASSWORD=changeme

## Blockchain Node
DAEMON_HOST=localhost
DAEMON_PORT=7674
DAEMON_URL=http://localhost:7674
DAEMON_TIMEOUT=10000  # ms

## Logging
LOG_LEVEL=info
LOG_FILE=/var/log/mining-pool.log

## Analytics
STATS_ENABLED=true
STATS_INTERVAL=60  # seconds
